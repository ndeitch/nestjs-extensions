{
  "changelog": {
    "labels": {
      "feat": "Features",
      "fix": "Bugs",
      "docs": "Documentation",
      "style": "Styles",
      "chore": "Miscellaneous Chores",
      "refactor": "Code Refactoring",
      "test": "Tests",
      "ci": "Continuous Integration"
    }
  },
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): v%s",
      "registry": "https://npm.pkg.github.com/",
      "npmClient": "npm"
    },
    "version": {
      "allowBranch": [
        "main",
        "develop"
      ]
    }
  }
}
