{
  "changelog": {
    "labels": {
      "feat": "New Feature",
      "bug": "Bug Fix"
    }
  },
  "command": {
    "publish": {
      "message": "chore(release): publish",
      "conventionalCommits": true,
      "registry": "https://npm.pkg.github.com/",
      "npmClient": "npm"
    },
    "version": {
      "conventionalCommits": true,
      "allowBranch": [
        "main",
        "develop"
      ]
    }
  },
  "packages": [
    "packages/*"
  ],
  "version": "independent"
}
